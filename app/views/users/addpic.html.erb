<h1>Profile Picture</h1>

<%= form_for(@user, multipart: true, url: "/postpic/#{@user.id}" , html: { method: "post" }) do |f| %>
  <div class="field">
    <%= f.label :New_Pic %>
    <%= f.file_field :avatar %>
  </div>
  <div class="actions">
    <%= f.submit 'Update profile' %>
    <%= link_to 'Nevermind', @user, class: 'button' %>
  </div>
<% end %>